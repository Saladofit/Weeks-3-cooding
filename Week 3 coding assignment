7.	//Write a function that takes two parameters, word and n, as arguments and returns the word conca
function concatWord(word,n){
    let result = "";
    for (let i = 0; i < n; i++){
        result += word;
    }
    return result;
}
console.log(concatWord('Hello', 3));

